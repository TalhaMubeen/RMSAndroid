<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_settings"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    android:paddingBottom="5dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="start">


        <ImageView
            android:layout_weight=".1"
            android:layout_marginStart="5dp"
            android:id="@+id/iv_settingType"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/defrost_icon_white"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:padding="5dp"
            app:tint="@color/color_dark_grey">
        </ImageView>



        <TextView
            android:layout_weight="2"
            android:id="@+id/tv_settingName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Type Profiles"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:lines="1"
            />

        <ImageView
            android:visibility="gone"
            android:layout_weight=".01"
            android:layout_marginEnd="20dp"
            android:id="@+id/iv_delAsset"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:maxWidth="45dip"
            android:padding="7dp"
            android:src="@drawable/delete_asset"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>



</LinearLayout>
