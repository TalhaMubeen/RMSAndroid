    <ImageView
        android:id="@+id/temp_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginTop="30dp"
        android:scaleType="center"
        android:src="@drawable/temp_icon_red" />

    <TextView
        android:id="@+id/sensor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/temp_image"
        android:text="Sensor Node"
        android:textColor="@color/innv_navy"
        android:textSize="15dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/sensor_bd_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensor_name"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/temp_image"
        android:paddingTop="0dp"

        android:paddingRight="10dp"
        android:text="00:00:00:00:00:00"
        android:textSize="16dp" />

