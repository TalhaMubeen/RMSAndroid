<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/temp_image"
        android:layout_width="30dp"
        android:layout_marginTop="19dp"
        android:layout_height="60dp"
        android:src="@drawable/temp_icon_red"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_toEndOf="@+id/temp_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:id="@+id/sensor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Sensor Node"
        android:textColor="@color/innv_navy"/>

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/sensor_bd_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/sensor_name"
        android:text="00:00:00:00:00:00"
        android:textColor="@color/black" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="3dp"
        android:layout_gravity="center"
        >

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_gravity="center"
            android:id="@+id/temperature_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:text="25.0"
            android:textColor="@color/black"
            />


        <ImageView
            android:id="@+id/humidity_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:alpha="0.9"
            android:src="@drawable/humidity_icon" />


        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:id="@+id/humidity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="25%"
            android:paddingEnd="10dp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/rssi"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:src="@drawable/rssi" />

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:id="@+id/sensor_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginEnd="15dp"
            android:text="-99.6666 dBm"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>