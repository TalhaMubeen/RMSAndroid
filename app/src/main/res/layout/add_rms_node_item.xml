<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#add8e6"

    android:layout_margin="5dp"
    >

    <androidx.cardview.widget.CardView
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@+id/add_checkbox"
        >

        <LinearLayout
            android:id="@+id/ll_details"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                >

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="7dp"
                    android:text="NODE NAME"
                    android:textColor="@color/black"
                    android:singleLine="true"/>

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:id="@+id/editTV_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:layout_marginStart="20dp"
                    android:text="TEST 1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="7dp"
                    android:text="MAC ADDRESS "
                    android:textColor="@color/black"
                    android:singleLine="true"/>


                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"
                    android:gravity="start"
                    android:text="00:00:00:00"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="7dp"
                    android:text="Selected Profile"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:singleLine="true"/>

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:id="@+id/tv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:layout_marginStart="5dp"
                    android:text="Default"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/ll_profile_details"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                    android:layout_height="match_parent">
                    <EditText
                        android:hint="@string/max_temp"
                        android:id="@+id/et_maxTemp"
                        android:inputType="none"
                        android:focusable="false"
                        android:gravity="left"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Min Temp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/et_minTemp"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Max Humidity"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/et_maxHumidity"
                        android:inputType="numberDecimal"
                        android:gravity="left"
                        android:textSize="12sp"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Min Humidity"

                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/et_minHumidity"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <CheckBox
        android:id="@+id/add_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:buttonTint="@color/black"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="2dp" />


</RelativeLayout>
