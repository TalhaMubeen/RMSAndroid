<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_toLeftOf="@+id/add_checkbox"
        >

        <ImageView
            android:id="@+id/add_site_mark"
            android:layout_toLeftOf="@+id/ll_details"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/temp_icon_red" />

        <LinearLayout
            android:id="@+id/ll_details"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <EditText
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/editTV_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Set sensor name"
                android:singleLine="true"/>

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="MAC ADDRESS HERE"
                android:singleLine="true"/>
        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/add_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="17dp"
        android:layout_marginEnd="16dp"

        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:clickable="false"
        />


</RelativeLayout>
